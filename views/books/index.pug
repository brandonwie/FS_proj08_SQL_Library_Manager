extends ../layout

block content
  p
    a(class="button" href="/books/new") Create New Book
  table
    thead
      tr
        th= "Title"
        th= "Author"
        th= "Genre"
        th= "Year"
    tbody
      each book in books
        book
          tr
            td
              a(href= "/books/" + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.year

